<section class="section">
    <div class="section-header">
        <h1>Tags</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="<%= app_dashboard_path %>">Dashboard</a></div>
            <div class="breadcrumb-item"><a href="<%= app_tags_path %>">Tags</a></div>
            <div class="breadcrumb-item">Modifier</div>
        </div>
    </div>
    <div class="section-body">
        <div class="col-12">
            <% if flash[:success] %>
                <div class="alert alert-success">
                    <%= flash[:success] %>
                </div>
            <% end %>
            <div class="card">
                <div class="card-body">
                    <%= render partial: "form", locals: { name: "Modifier", url: app_tag_path(@tag.id) } %>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section">
    <div class="section-header">
        <h1>Categories</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="<%= app_dashboard_path %>">Dashboard</a></div>
            <div class="breadcrumb-item"><a href="<%= app_categories_path %>">Categories</a></div>
            <div class="breadcrumb-item">Créé</div>
        </div>
    </div>
    <div class="section-body">
        <% if flash[:success] %>
            <div class="alert alert-success">
                <%= flash[:success] %>
            </div>
        <% end %>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <%= form_for @category, url: app_categories_path do |f| %>
                        <div class="form-group">
                            <%= f.label :name, "Nom" %>
                            <%= f.text_field :name, class: "form-control" %>
                            <% if @category.errors[:name].any? %>
                                <span class="text-danger"><%= @category.errors[:name].first %></span>
                            <% end %>
                        </div>
                        <div class="form-group">
                            <%= f.submit "Ajouter", class: "btn btn-primary btn-lg btn-block" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
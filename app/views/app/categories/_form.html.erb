<%= form_for @category, url: local_assigns[:url] do |f| %>
    <div class="form-group">
        <%= f.label :name, "Nom" %>
        <%= f.text_field :name, class: "form-control" %>
        <% if @category.errors[:name].any? %>
            <span class="text-danger"><%= @category.errors[:name].first %></span>
        <% end %>
    </div>
    <div class="form-group">
        <%= f.submit local_assigns[:name], class: "btn btn-info btn-lg btn-block" %>
    </div>
<% end %>
<section class="section">
    <div class="section-header">
        <h1>Blogs</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="<%= app_dashboard_path %>">Dashboard</a></div>
            <div class="breadcrumb-item"><a href="<%= app_blogs_path %>">Blogs</a></div>

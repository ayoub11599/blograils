<div class="card">
    <div class="card-content">
        <%= form_with url: "/register", method: :post, model: @user do |f| %>

            <div class="field">
                <%= f.label :username, "Nom complet", class: "label" %>
                <div class="control">
                    <%= f.text_field :username,  class: "input" %>
                </div>
                <% if @user.errors[:username].any? %>
                    <span class="tag is-danger"><%= @user.errors[:username].first %></span>
                <% end %>
            </div>

            <div class="field">
                <%= f.label :email, "Adress email", class: "label" %>
                <div class="control">
                    <%= f.text_field :email,  class: "input" %>
                </div>
                <% if @user.errors[:email].any? %>
                    <span class="tag is-danger"><%= @user.errors[:email].first %></span>
                <% end %>
            </div>

            <div class="field">
                <%= f.label :password, "Mot de passe", class: "label" %>
                <div class="control">
                    <%= f.password_field :password,  class: "input" %>
                </div>
                <% if @user.errors[:password].any? %>
                    <span class="tag is-danger"><%= @user.errors[:password].first %></span>
                <% end %>
            </div>
            
            <div class="field">
                <%= f.label :password_confirmation, "Confirm le mot de passe", class: "label" %>
                <div class="control">
                    <%= f.password_field :password_confirmation,  class: "input" %>
                </div>
                <% if @user.errors[:password_confirmation].any? %>
                    <span class="tag is-danger"><%= @user.errors[:password_confirmation].first %></span>
                <% end %>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <%= f.submit "S'inscrire", class: "button is-link" %>
                </div>
            </div>

        <% end %>
    </div>
</div>
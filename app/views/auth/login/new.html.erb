<%= form_tag auth_login_path, method: :post do %>
    <div class="form-group">
        <%= label_tag :email, "Adress email", class: "control-label" %>
        <%= text_field_tag :email, nil, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= label_tag :password, "Mot de passe", class: "control-label" %>
        <%= password_field_tag :password, nil, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= submit_tag "Se connecter", class: "btn btn-primary btn-lg btn-block" %>
    </div>
<% end %>